@model ScriptVersion1.Models.datepickermodel
@{
    ViewBag.Title = "DatePicker";
}

@using (Html.BeginForm("UgyeletPicker", "input", FormMethod.Post))
{
    <div>Kérem adja meg hogy mikor szeretne ügyeletet elvállalni.</div>
    @Html.TextBoxFor(m => m.ugyeletDateData, null, new { @class = "datepicker" })

    <input type="submit" value="submit" />
}

@using (Html.BeginForm("SzabadsagPicker", "input", FormMethod.Post))
{
    <div>Kérem adja meg hogy mikor szeretne szabadságot kivenni.</div>
    @Html.TextBoxFor(m => m.szabadsagDateData, null, new { @class = "datepicker" })

    <input type="submit" value="submit" />
}

@using (Html.BeginForm("TiltottPicker", "input", FormMethod.Post))
{
    <div>Tiltott message placeholder</div>
    @Html.TextBoxFor(m => m.tiltottDateData, null, new { @class = "datepicker" })

    <input type="submit" value="submit" />
}


<link href="~/MultiDatePicker/jquery-ui.multidatespicker.css" rel="stylesheet" />
<link href="https://code.jquery.com/ui/1.12.1/themes/pepper-grinder/jquery-ui.css" rel="stylesheet" />
@section scripts
    {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
    <script src="~/MultiDatePicker/jquery-ui.multidatespicker.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>
    <script>
        $(document).ready(function () {
            $(".datepicker").multiDatesPicker({
                dateFormat: "yy-mm-dd",
                changemonth: true,
                changeyear: true
            });
        });
    </script>
}



